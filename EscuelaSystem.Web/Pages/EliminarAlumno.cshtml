@page
@model EscuelaSystem.Web.Pages.EliminarAlumnoModel
@{
}

<div>
    <h1>Eliminar Alumno</h1>
</div>

<form method="post">
    <input type="hidden" asp-for="Alumnos.Id" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Alumnos.Codigo"></label>
        <input type="text" class="form-control" asp-for="Alumnos.Codigo" placeholder="Ingrese un codigo del alumno" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Alumnos.Nombres"></label>
        <input type="text" class="form-control disabled" asp-for="Alumnos.Nombres" placeholder="Ingrese los nombres del alumno" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Alumnos.Apellidos"></label>
        <input type="text" class="form-control disabled" asp-for="Alumnos.Apellidos" placeholder="Ingrese los apellidos del alumno" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Alumnos.Edad"></label>
        <input type="text" class="form-control disabled" asp-for="Alumnos.Edad" placeholder="Ingresela edad del alumno" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Alumnos.Activo"></label>
        <input type="checkbox" class="form-control disabled" asp-for="Alumnos.Activo" disabled>
    </div>

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a type="button" asp-page="/Alumnos" class="btn btn-primary">Regresar</a>
</form>