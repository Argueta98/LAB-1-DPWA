@page
@model EscuelaSystem.Web.Pages.AlumnosModel
@{
}

<div>
    <h1>Listado de Materias</h1>
</div>
<div>
    <a type="button" asp-page="/CrearAlumno" class="btn btn-success">Ingresar Alumnos</a>
    <br />
    <hr />
</div>


<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Edad</th>
        <th>Activo</th>
    </tr>
    <tbody>
        @foreach (var item in Model.Alumnos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Codigo</td>
                <td>@item.Nombres</td>
                <td>@item.Apellidos</td>
                <td>@item.Edad</td>

                <td>

                    @if (item.Activo)
                    {
                        <p>SI</p>
                    }
                    else
                    {
                        <p>NO</p>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-page="/EditarAlumno" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-page="/EliminarAlumno" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
    </tbody>
</table>