@page
@model EscuelaSystem.Web.Pages.CrearMateriaModel
@{
}

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Materia.Codigo"></label>
        <input type="text" class="form-control" asp-for="Materia.Codigo" placeholder="Ingrese un codigo de materia">
        <span class="text-danger" asp-validation-for="Materia.Codigo"></span>
    </div>
    <div class="form-group">
        <label asp-for="Materia.Decripcion"></label>
        <input type="text" class="form-control" asp-for="Materia.Decripcion" placeholder="Ingrese el nombre d ela materia">
        <span class="text-danger" asp-validation-for="Materia.Decripcion"></span>
    </div>
    <div class="form-group">
        <label asp-for="Materia.Habilitada"></label>
        <input type="checkbox" class="form-control" asp-for="Materia.Habilitada">
        <span class="text-danger" asp-validation-for="Materia.Habilitada"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a type="button" asp-page="/Materias" class="btn btn-primary">Regresar</a>
</form>